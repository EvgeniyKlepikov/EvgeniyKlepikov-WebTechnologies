@using KLEPIKOV30323WEB.Blazor.Services
@using KLEPIKOV30323WEB.Domain.Entities
@implements IDisposable
@rendermode InteractiveServer
<h3>Продукт дня</h3>
@if(ProductService.Products!=null && ProductService.Products.Count() != 0)
{
    <table class="table table-striped">
        <thead>
        <th>Название</th>
        <th></th>
            @foreach (var item in ProductService.Products)
            {
            <tr>
                <td>@item.Name</td>
                <td>
                    <button class="btn btn-outline-dark" @onclick="@(()=>OnProductSelected(item.Id))">
                        Подробно
                    </button>
                </td>
            </tr>
            }
        </thead>
    </table>
}
@code {
    [CascadingParameter]
    public IProductService<Product> ProductService { get; set; }
    [Parameter]
    public EventCallback<int> ProductSelected { get; set; }
    protected override async Task OnInitializedAsync()
    {
        ProductService.ListChanged += StateHasChanged;
    }
    public async void OnProductSelected(int id)
    {
        await ProductSelected.InvokeAsync(id);
    }
    public void Dispose()
    {
        ProductService.ListChanged -= StateHasChanged;
    }
}
